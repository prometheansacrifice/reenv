{
  "name": "reenv",
  "version": "0.3.0",
  "description": "dotenv-cli written in reason",
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": {
      "bin": [
        "reenv"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": [
        "rely.lib",
        "reenv.lib"
      ],
      "main": "TestReenv",
      "name": "TestReenv.exe"
    },
    "library": {
      "name": "reenv.lib",
      "namespace": "Reenv",
      "require": [
        "unix",
        "str"
      ]
    },
    "executable": {
      "require": [
        "reenv.lib"
      ],
      "main": "ReenvApp",
      "name": "reenv.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy b dune runtest",
    "doc": "esy dune build @doc",
    "format": "esy dune build @fmt --auto-promote"
  },
  "dependencies": {
    "@opam/dune": "*",
    "@esy-ocaml/reason": ">= 3.4.0 < 3.5.0",
    "refmterr": "*",
    "ocaml": "^4.4.0",
    "pesy": "*",
    "@reason-native/pastel": "*",
    "@reason-native/rely": "*",
    "@opam/cmdliner": "*",
    "@opam/ppx_deriving_cmdliner": "*",
    "@opam/ppx_deriving": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "~4.6.0",
    "@opam/odoc": "1.4.0"
  }
}
